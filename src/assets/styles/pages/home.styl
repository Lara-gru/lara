.home {
  width: 100%;
  padding: 50px 0;

  &__content {
    display: flex;
  }

  &__logo {
    max-width: 200px;
    max-height: 300px;
    background-repeat: no-repeat;
    background-position: 50%;
    background-size: cover;
    animation: morph 8s ease-in-out 1s infinite;
    background-blend-mode: multiply;
    box-shadow: inset 0 0 0 9px hsl(0deg 0% 100% / 30%);
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    overflow: hidden;
  }

  &__text {
    margin-left: 100px;
  }

  &__desc {
    padding-bottom: 20px;
    font-size: 20px;
  }

  &__title {
    padding-bottom: 20px;
  }

  &__subtitle {
    font-size: 24px;
    padding-bottom: 30px;
  }

  &__skill-title {
    font-size: 24px;
    padding-bottom: 30px;
  }

  &__skill-list {
    display: flex;
    flex-direction: column;
  }

  &__skill {
    display: flex;
    padding-bottom: 10px;
    font-size: 20px;
  }

  &__skill-name {
    width: 200px;
    font-weight: 700;
  }

  &__skill-value {
    width: 200px;
  }
}
