.header
  z-index: 2
  position: fixed
  top: 0
  left: 0
  display: flex
  align-items: center
  width: 100%
  height: headerHeight
  padding: 0 100px
  font-size: 20px
  background-color: colorBcgPink
  transition: all .4s ease

  &__nav
    display: flex
    align-items: center

  &__nav-item
    margin-right: 45px
    border-bottom: 1px solid transparent
    color: #000
    transition: all .3s ease
    &:last-child
      margin-right: 0
    &:hover
      color: colorOrange
