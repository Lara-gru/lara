.footer
  display: flex
  align-items: center
  width: 100%
  height: 100px
  padding: 0 100px
  background-color: colorBcgPink

  &__nav
    display: flex
    align-items: center
    justify-content: flex-end

  &__nav-item
    margin-right: 45px
    border-bottom: 1px solid transparent
    color: #000
    transition: all .3s ease
    &:last-child
      margin-right: 0
    &:hover
      color: colorOrange
